{
  "name": "wsrun",
  "version": "5.2.4",
  "description": "executes commands on packages in parallel, but is aware of the dependencies between them",
  "main": "./build/index.js",
  "repository": "hfour/wsrun",
  "author": "hfour",
  "license": "MIT",
  "bin": {
    "wsrun": "./bin/wsrun.mjs"
  },
  "files": [
    "bin/*",
    "build/**/!(*.spec.js|*.spec.js.map)"
  ],
  "devDependencies": {
    "tsup": "^8.0.2",
    "@types/glob": "^8.1.0",
    "@types/minimatch": "^5.1.2",
    "@types/mkdirp": "^2.0.0",
    "@types/node": "^20.12.8",
    "@types/rimraf": "^4.0.5",
    "@types/split": "^0.3.28",
    "@types/yargs": "^13.0.0",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "semantic-release": "^23.0.8",
    "prettier": "^3.2.5",
    "ts-mockito": "^2.6.1",
    "typescript": "^5.4.5",
    "bun": "^1.1.7"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --out-dir build",
    "watch": "tsup --watch src/index.ts --format esm --out-dir build",
    "test": "bun run build && bun test:prettier && bun test",
    "test:prettier": "prettier -c '**/*.ts' '**/*.json'",
    "test:watch": "bun test --watch",
    "dev": "run-p test:watch watch",
    "prepublish": "bun run build",
    "release": "semantic-release"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "glob": "^10.3.12",
    "minimatch": "^9.0.4",
    "split": "^1.0.1",
    "throat": "^6.0.2",
    "yargs": "^17.7.2",
    "jest-changed-files": "^29.7.0"
  }
}
